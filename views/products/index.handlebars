
<div class="well">
  <h3 class="text-center">Refine your results</h3>
  <div class="row">
  {{>_search}}
  </div>
  <div class="row">
  {{>_filter categories=categories}}
  </div>
  <div class="row">
  {{>_sort}}
  </div>
</div>

<!-- <header class="page-header">
  <h1>Products</h1>
  <a href="/products/new" class="btn btn-primary">+ New Product</a>
</header> -->

{{#if products.length }}
  {{#each products as |productGroup| }}
    <div class="row">
    {{#each productGroup as |product|}}
      {{>_product product=product}}
    {{/each}}
    </div>
  {{/each }}
{{else }}
  <p class="text-danger">No products</p>
{{/if }}
