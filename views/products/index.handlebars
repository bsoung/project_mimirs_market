<div class="row">
{{>_search}}
</div>
<div class="row">
{{>_filter}}
</div>
<div class="row">
{{>_sort}}
</div>


<form class="form">
  <div class="form-group col-xs-6 col-xs-offset-3">
    <input type="text" class="form-control" id="search" placeholder="Search for products...">
  </div>
  <button type="submit" class="btn btn-default"></span>Search &nbsp;<span class="glyphicon glyphicon-search"></button>
</form>


<header class="page-header">
  <h1>Products</h1>
  <a href="/products/new" class="btn btn-primary">+ New Product</a>
</header>


{{#if products.length }}
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>SKU</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each products as |product| }}


        <tr>
          <td>
            <a href="/products/{{ product.id }}">{{ product.name }}</a>
          </td>
          <td>
            <a href="/products/{{ product.id }}">{{ product.sku }}</a>
          </td>
          <td>
            <a href="/products/{{ product.id }}">{{ product.desc }}</a>
          </td>
          <td>
            <a href="/products/{{ product.id }}">{{ product.price }}</a>
          </td>
          <td>
            <a href="/products/{{ product.id }}">{{ product.Category.name }}</a>
          </td>
          <td>
            <a href="/products/{{ product.id }}/edit">Edit</a>
          </td>
          <td>
            <a href="/products/{{ product.id }}?_method=delete" class="text-danger">Delete</a>
          </td>
        </tr>
      {{/each }}
    </tbody>
  </table>
{{else }}
  <p class="text-danger">No products</p>
{{/if }}
