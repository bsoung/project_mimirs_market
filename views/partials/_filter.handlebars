<form id=class="form">
  <div class="form-group col-xs-3 col-xs-offset-1">
		<select class="form-control" name="refine[filter][categoryId]">
      <option value="0">
        Category
      </option>
      {{#each categories as |category|}}
		  <option value="{{category.id}}">{{category.name}}</option>
      {{/each}}
		</select>
  </div>
  <div class="form-group col-xs-3">
    <select class="form-control" name="refine[filter][minPrice]">
      <option value="0">No Minimum Price</option>
      <option value="1">$100</option>
      <option value="2">$500</option>
      <option value="3">$1000</option>
      <option value="4">$2000</option>
      <option value="5">$5000</option>
    </select>
  </div>
  <div class="form-group col-xs-3">
    <select class="form-control" name="refine[filter][minPrice]">
      <option value="0">No Maximum Price</option>
      <option value="1">$500</option>
      <option value="2">$1000</option>
      <option value="3">$2000</option>
      <option value="4">$5000</option>
      <option value="5">$10000</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary"></span>Filter &nbsp;<span class="glyphicon glyphicon-filter"></button>
</form>
